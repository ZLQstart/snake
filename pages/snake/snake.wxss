/* pages/snake/snake.wxss */
#snake{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.score{
  display: flex;
  margin: 20rpx;
}
.score-box{
  width: 180rpx;
  height: 120rpx;
  flex: 1;
  margin: 20rpx;
  border-radius: 10rpx;
}
.title{
  background-color: #3476ff;
  color: #fff;
  text-align: center;
  line-height: 120rpx;
}
.score-detail{
  background-color: #ccc;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.ground{
  width: 660rpx;
  height: 840rpx;
  margin-left: 40rpx;
}
.rows{
  width: 660rpx;
  height: 30rpx;
}
.box{
  width: 30rpx;
  height: 30rpx;
  float: left;
  background-color: #ccc;
}
.box_1{
  background-color: red;
}
.box_2{
  background-color: green;
}
